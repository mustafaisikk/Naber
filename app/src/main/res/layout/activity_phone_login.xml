<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PhoneLogin"
    android:background="@drawable/bb">

    <include layout="@layout/actionbar_app"
        android:id="@+id/actionbar_phonelogin"/>

    <EditText
        android:id="@+id/Phone_Login_phoneNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="17dp"
        android:layout_marginTop="180dp"
        android:padding="8dp"
        android:hint="Lütfen Telefon Numaranızı Giriniz."
        android:textAllCaps="false"
        android:textSize="15sp"
        android:drawableStart="@drawable/phone"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_below="@id/actionbar_phonelogin"/>


    <EditText
        android:id="@+id/Phone_Login_Code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="17dp"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        android:hint="Lütfen Doğrulama Kodunu Giriniz."
        android:textAllCaps="false"
        android:textSize="15sp"
        android:drawableStart="@drawable/password"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_below="@+id/Phone_Login_phoneNumber"
        android:visibility="invisible"/>

    <Button
        android:id="@+id/Phone_login_code_send"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Doğrulama kodu Gönder"
        android:layout_below="@+id/Phone_Login_Code"
        android:textAllCaps="false"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="17dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_create"
        android:textColor="@android:color/background_light"
        android:textSize="19sp"
        android:textAlignment="center"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/Phone_login_Verify_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kodu Doğrula"
        android:layout_below="@+id/Phone_login_code_send"
        android:textAllCaps="false"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="17dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/btn_create"
        android:textColor="@android:color/background_light"
        android:textSize="19sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:visibility="invisible"
        />

</RelativeLayout>