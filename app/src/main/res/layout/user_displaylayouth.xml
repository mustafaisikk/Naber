<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/UserDisplay_LinearLayouth_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/UserDisplay_Profile_image"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/profile_image"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp">

            <LinearLayout
                android:id="@+id/UserDisplay_LinearLayouth_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:id="@+id/User_Display_Username"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="Kullanıcı Adı: "
                    android:textAlignment="textStart"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    />
                <ImageView
                    android:id="@+id/User_Display_Online_İcon"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/online"
                    android:visibility="invisible"
                    />

            </LinearLayout>

            <TextView
                android:id="@+id/User_Display_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Durum: "
                android:textAlignment="textStart"
                android:textSize="16sp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/request_accept_button"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="Kabul Et"
                    android:textSize="16dp"
                    android:textAllCaps="false"
                    android:background="@android:color/holo_green_dark"
                    android:visibility="invisible"
                    />
                <Button
                    android:id="@+id/request_cancel_button"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="Geri Çevir"
                    android:textSize="16dp"
                    android:layout_marginStart="30dp"
                    android:textAllCaps="false"
                    android:background="@android:color/holo_red_dark"
                    android:textColor="@android:color/background_light"
                    android:visibility="invisible"
                    />

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

</RelativeLayout>